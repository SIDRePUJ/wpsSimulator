<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wpsim</groupId>
  <artifactId>wpsSimulator</artifactId>
  <version>1.0</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <mainClass>org.wpsim.WellProdSim.wpsStart</mainClass>
          <arguments>
            <argument>-env</argument>
            <argument>local</argument>
            <argument>-mode</argument>
            <argument>single</argument>
            <argument>-money</argument>
            <argument>750000</argument>
            <argument>-land</argument>
            <argument>2</argument>
            <argument>-personality</argument>
            <argument>0.0</argument>
            <argument>-tools</argument>
            <argument>20</argument>
            <argument>-seeds</argument>
            <argument>50</argument>
            <argument>-water</argument>
            <argument>0</argument>
            <argument>-nodes</argument>
            <argument>1</argument>
            <argument>-irrigation</argument>
            <argument>0</argument>
            <argument>-emotions</argument>
            <argument>1</argument>
            <argument>-training</argument>
            <argument>0</argument>
            <argument>-agents</argument>
            <argument>1</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.wpsim.WellProdSim.wpsStart</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <sonar.host.url>https://sonarcloud.io</sonar.host.url>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <sonar.organization>sidrepuj</sonar.organization>
  </properties>
</project>
